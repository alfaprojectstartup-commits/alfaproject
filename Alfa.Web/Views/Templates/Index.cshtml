@model IReadOnlyList<Alfa.Web.Models.FaseModelosViewModel>
@using System.Collections.Generic
@using System.Linq
@{
    ViewData["Title"] = "Templates";
    var totalFases = Model?.Count ?? 0;
}

<nav aria-label="breadcrumb" class="mb-3 small">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Processos" asp-action="Index">Processos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Templates</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <div>
        <h1 class="h4 mb-1">Catálogo de templates</h1>
        <p class="text-muted mb-0">Visualize todas as fases, páginas e campos disponíveis antes de iniciar um novo processo.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-controller="Templates" asp-action="Novo" class="btn btn-outline-primary">Nova fase</a>
        <a asp-controller="Processos" asp-action="Novo" class="btn btn-primary">Novo processo</a>
    </div>
</div>

@if (totalFases == 0)
{
    <div class="alert alert-info">Nenhum template cadastrado até o momento.</div>
}
else
{
    <div class="row mb-4">
        <div class="col-12 col-md-6 col-lg-4">
            <label for="templateSearch" class="form-label small text-uppercase text-muted fw-semibold mb-1">Buscar templates</label>
            <input type="search" id="templateSearch" class="form-control" placeholder="Digite para buscar por fase, página ou campo" autocomplete="off" />
        </div>
    </div>

    <div id="templatesEmptyState" class="alert alert-light border d-none">
        Nenhuma fase encontrada para a sua busca.
    </div>

    <div class="accordion alfa-accordion" id="fasesAccordion">
        @foreach (var fase in Model)
        {
            var collapseId = $"fase_{fase.Id}";
            var headingId = $"fase_heading_{fase.Id}";
            var paginaCount = fase.Paginas?.Count ?? 0;
            var paginasOrdenadas = (fase.Paginas ?? Enumerable.Empty<Alfa.Web.Models.PaginaModeloViewModel>()).OrderBy(p => p.Ordem).ThenBy(p => p.Titulo).ToList();
            var termosBusca = new List<string>();
            if (!string.IsNullOrWhiteSpace(fase.Titulo))
            {
                termosBusca.Add(fase.Titulo);
            }
            foreach (var paginaBusca in paginasOrdenadas)
            {
                if (!string.IsNullOrWhiteSpace(paginaBusca.Titulo))
                {
                    termosBusca.Add(paginaBusca.Titulo);
                }
                foreach (var campoBusca in paginaBusca.Campos ?? new List<Alfa.Web.Models.CampoModeloViewModel>())
                {
                    if (!string.IsNullOrWhiteSpace(campoBusca.Rotulo))
                    {
                        termosBusca.Add(campoBusca.Rotulo);
                    }
                    if (!string.IsNullOrWhiteSpace(campoBusca.NomeCampo))
                    {
                        termosBusca.Add(campoBusca.NomeCampo);
                    }
                }
            }
            var textoBusca = string.Join(" ", termosBusca);
            <div class="accordion-item" data-search="@textoBusca">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                        <div class="w-100 d-flex justify-content-between align-items-center gap-3">
                            <div>
                                <span class="d-block fw-semibold">@fase.Titulo</span>
                                <span class="text-muted small">Ordem: @fase.Ordem · @paginaCount página(s)</span>
                            </div>
                            <span class="badge @(fase.Ativo ? "bg-success" : "bg-secondary")">@(fase.Ativo ? "Ativa" : "Inativa")</span>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#fasesAccordion">
                    <div class="accordion-body">
                        <div class="d-flex justify-content-end mb-3">
                            <a asp-action="Editar" asp-route-token="@fase.Token" class="btn btn-sm btn-outline-primary">Editar fase</a>
                        </div>
                        @if (paginaCount == 0)
                        {
                            <div class="text-muted small">Nenhuma página configurada para esta fase.</div>
                        }
                        else
                        {
                            foreach (var pagina in paginasOrdenadas)
                            {
                                var campos = (pagina.Campos ?? new List<Alfa.Web.Models.CampoModeloViewModel>()).OrderBy(c => c.Ordem).ThenBy(c => c.Rotulo).ToList();
                                <section class="mb-4">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h3 class="h6 mb-1">@pagina.Titulo</h3>
                                            <span class="text-muted small">Ordem: @pagina.Ordem · @campos.Count campo(s)</span>
                                        </div>
                                    </div>
                                    @if (campos.Count == 0)
                                    {
                                        <div class="alert alert-light border small mb-0">Nenhum campo cadastrado para esta página.</div>
                                    }
                                    else
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-sm align-middle mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th scope="col">Rótulo</th>
                                                        <th scope="col">Nome</th>
                                                        <th scope="col">Tipo</th>
                                                        <th scope="col">Obrigatório</th>
                                                        <th scope="col">Ajuda / Placeholder</th>
                                                        <th scope="col">Opções</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var campo in campos)
                                                    {
                                                        var opcoesAtivas = (campo.Opcoes ?? new List<Alfa.Web.Models.CampoOpcaoViewModel>())
                                                            .Where(o => o.Ativo)
                                                            .OrderBy(o => o.Ordem)
                                                            .ToList();
                                                        <tr>
                                                            <td>
                                                                <div class="fw-semibold">@campo.Rotulo</div>
                                                                <div class="text-muted small">Ordem: @campo.Ordem</div>
                                                            </td>
                                                            <td><code>@campo.NomeCampo</code></td>
                                                            <td class="text-capitalize">@campo.Tipo</td>
                                                            <td>
                                                                @if (campo.Obrigatorio)
                                                                {
                                                                    <span class="badge bg-danger">Sim</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-secondary">Não</span>
                                                                }
                                                            </td>
                                                            <td class="small">
                                                                @if (!string.IsNullOrWhiteSpace(campo.Placeholder))
                                                                {
                                                                    <div><span class="text-muted">Placeholder:</span> @campo.Placeholder</div>
                                                                }
                                                                @if (!string.IsNullOrWhiteSpace(campo.Ajuda))
                                                                {
                                                                    <div><span class="text-muted">Ajuda:</span> @campo.Ajuda</div>
                                                                }
                                                                @if (string.IsNullOrWhiteSpace(campo.Placeholder) && string.IsNullOrWhiteSpace(campo.Ajuda))
                                                                {
                                                                    <span class="text-muted">-</span>
                                                                }
                                                            </td>
                                                            <td class="small">
                                                                @if (opcoesAtivas.Count > 0)
                                                                {
                                                                    <ul class="list-unstyled mb-0">
                                                                        @foreach (var opcao in opcoesAtivas)
                                                                        {
                                                                            <li>
                                                                                <span class="fw-semibold">@opcao.Texto</span>
                                                                                @if (!string.IsNullOrWhiteSpace(opcao.Valor))
                                                                                {
                                                                                    <span class="text-muted">(@opcao.Valor)</span>
                                                                                }
                                                                            </li>
                                                                        }
                                                                    </ul>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted">-</span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                </section>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var searchInput = document.getElementById('templateSearch');
            var accordion = document.getElementById('fasesAccordion');
            var emptyState = document.getElementById('templatesEmptyState');

            if (!searchInput || !accordion) {
                return;
            }

            var accordionItems = accordion.querySelectorAll('.accordion-item');

            var filterFases = function () {
                var termo = searchInput.value.trim().toLowerCase();
                var visiveis = 0;

                accordionItems.forEach(function (item) {
                    var conteudo = (item.dataset.search || '').toLowerCase();
                    var corresponde = termo === '' || conteudo.includes(termo);
                    item.style.display = corresponde ? '' : 'none';
                    if (corresponde) {
                        visiveis++;
                    }
                });

                if (emptyState) {
                    emptyState.classList.toggle('d-none', visiveis !== 0);
                }
            };

            searchInput.addEventListener('input', filterFases);
            filterFases();
        });
    </script>
}
