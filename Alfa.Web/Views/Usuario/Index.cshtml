@model UsuarioPaginacaoViewModel<Alfa.Web.Models.UsuarioEmpresaViewModel>

@{
    ViewData["Title"] = "Usuários";
    var usuariosJson = ViewData["UsuariosJson"] ?? "[]";
}

<h3 class="mb-3">Gerenciar Usuários</h3>

<div class="mb-3">
    <input id="filtro-usuario" type="text" class="form-control" placeholder="Buscar por nome ou email" />
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody id="usuarios-tbody">
        <tr>
            <td colspan="4" class="text-center">Carregando usuários...</td>
        </tr>
    </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
    <nav>
        <ul id="usuarios-pagination" class="pagination"> </ul>
    </nav>
</div>

<script>
    window.USUARIOS = @Html.Raw(usuariosJson);
    window.INITIAL_PAGE = @Model.PaginaAtual;
    window.PAGE_SIZE = 10;
</script>

@section Scripts {
    <script src="~/js/usuario.js"> </script>
}

