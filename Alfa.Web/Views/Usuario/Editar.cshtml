@model Alfa.Web.Models.UsuarioEmpresaViewModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container mt-4">
    <h3>Editar Usuário</h3>

    <form asp-action="Editar" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="EmpresaId" />

        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Ativo" class="form-check-input" />
            <label asp-for="Ativo" class="form-check-label"></label>
        </div>

        <div class="d-flex">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}