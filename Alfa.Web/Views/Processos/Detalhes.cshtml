@model Alfa.Web.Dtos.ProcessoDetalheViewModel
@using System.Linq
@using Alfa.Web.Dtos
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Alfa.Web

@{
    ViewData["Title"] = $"Processo · {Model.Titulo}";
    var fases = Model.Fases ?? new List<Alfa.Web.Dtos.FaseInstanciaViewModel>();
    var primeiraPagina = fases.SelectMany(f => f.Paginas ?? new List<Alfa.Web.Dtos.PaginaInstanciaViewModel>())
        .OrderBy(p => p.Ordem)
        .FirstOrDefault();
    var historico = (IEnumerable<ProcessoHistoricoViewModel>)(ViewBag.Historico ?? new List<ProcessoHistoricoViewModel>());
    var historicoLista = historico
        .OrderByDescending(h => h.CriadoEm)
        .ToList();
}

<nav aria-label="breadcrumb" class="mb-3 small">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-action="Index">Processos</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Titulo</li>
    </ol>
</nav>

<form id="preenchimento-externo-antiforgery" class="d-none" method="post">
    @Html.AntiForgeryToken()
</form>

<div id="processo-detalhes" data-processo-details data-processo-id="@Model.Id" data-link-preenchimento-url="@Url.Action("LinkPreenchimentoExterno", "Processos")">
    <div class="d-flex flex-wrap gap-3 align-items-start mb-4">
        <div class="flex-grow-1">
            <h2 class="h4 mb-1">@Model.Titulo</h2>
            <div class="text-muted small">Criado em @Model.CriadoEm.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
        <span class="badge rounded-pill status-badge align-self-center" data-status-processo>@Model.Status</span>
        <div class="btn-group align-self-center">
            <a asp-action="DownloadPdf"
               asp-route-id="@Model.Id"
               class="btn btn-outline-primary"
               title="Baixar processo em PDF">
                Baixar PDF
            </a>
        </div>
    </div>

    <div class="mb-4">
        <label class="form-label small text-muted mb-1">Progresso do processo</label>
        <progress-bar value="@Model.PorcentagemProgresso" label="@($"{Model.PorcentagemProgresso}%")" id="processo-progress" data-progresso-processo></progress-bar>
    </div>

    <div class="row g-4">
        <div class="col-lg-4 col-xl-3">
            @foreach (var fase in fases)
            {
                <div class="card shadow-sm fase-card mb-3" data-fase-card="@fase.Id">
                    <div class="card-body pb-2">
                        <div class="d-flex justify-content-between align-items-start gap-2">
                            <div>
                                <h5 class="card-title h6 mb-1">@fase.Titulo</h5>
                                <span class="badge rounded-pill badge-phase-status" data-fase-status="@fase.Id">@fase.Status</span>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label class="form-label small text-muted mb-1">Progresso</label>
                            <progress-bar value="@fase.PorcentagemProgresso" small="true" label="@($"{fase.PorcentagemProgresso}%")" id="fase-progress-@fase.Id"></progress-bar>
                        </div>
                    </div>
                    <div class="list-group list-group-flush">
                        @foreach (var pagina in fase.Paginas ?? new List<Alfa.Web.Dtos.PaginaInstanciaViewModel>())
                        {
                            var isActive = primeiraPagina != null && primeiraPagina.Id == pagina.Id;
                            <button type="button"
                                    class="list-group-item list-group-item-action d-flex justify-content-between align-items-center page-selector @(isActive ? "active" : string.Empty)"
                                    data-page-selector
                                    data-fase-id="@fase.Id"
                                    data-page-id="@pagina.Id">
                                <span class="me-2 page-state-icon @(pagina.Concluida ? "text-success" : "text-muted")" data-page-status="@pagina.Id">@(pagina.Concluida ? "✔" : "•")</span>
                                <span class="flex-grow-1 text-start">@pagina.Titulo</span>
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-8 col-xl-9">
            @foreach (var fase in fases)
            {
                foreach (var pagina in fase.Paginas ?? new List<Alfa.Web.Dtos.PaginaInstanciaViewModel>())
                {
                    var isActive = primeiraPagina != null && primeiraPagina.Id == pagina.Id;
                    <section class="card shadow-sm mb-4 page-section @(isActive ? string.Empty : "d-none")" data-page-section data-fase-id="@fase.Id" data-page-id="@pagina.Id">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                                <div>
                                    <h5 class="card-title mb-1">@pagina.Titulo</h5>
                                    <div class="text-muted small">Fase: @fase.Titulo</div>
                                </div>
                                <div class="d-flex flex-column flex-sm-row gap-2 align-items-sm-center">
                                    <button type="button"
                                            class="btn btn-outline-primary btn-sm"
                                            data-link-preenchimento
                                            data-fase-id="@fase.Id"
                                            data-page-id="@pagina.Id">
                                        Preenchimento externo
                                    </button>
                                    <span class="badge @(pagina.Concluida ? "bg-success" : "bg-secondary") align-self-center" data-page-complete-badge="@pagina.Id">
                                        @(pagina.Concluida ? "Página concluída" : "Página pendente")
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form data-resposta-form data-fase-id="@fase.Id" data-page-id="@pagina.Id">
                                @foreach (var campo in pagina.Campos ?? new List<Alfa.Web.Dtos.CampoInstanciaViewModel>())
                                {
                                    @await Html.PartialAsync("Partials/_CampoInstancia", campo)
                                }

                                <div class="d-flex justify-content-between align-items-center mt-4">
                                    <div class="text-muted small" data-saving-feedback hidden>Salvando...</div>
                                    <div class="btn-group">
                                        <button type="submit" class="btn btn-success" data-bs-toggle="tooltip" title="Salva as respostas desta página"
                                                data-loading-text="Salvando...">Salvar respostas</button>
                                        <button type="button" class="btn btn-outline-secondary" data-recarregar-pagina title="Recarregar dados" data-bs-toggle="tooltip">Recarregar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                }
            }
        </div>
    </div>

    <section class="card shadow-sm mt-4">
        <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
            <h5 class="card-title mb-0">Log do processo</h5>
            <span class="badge rounded-pill bg-light text-muted">@historicoLista.Count evento(s)</span>
        </div>
        <div class="card-body">
            @if (historicoLista.Any())
            {
                <ol class="processo-log" data-processo-log>
                    @foreach (var evento in historicoLista)
                    {
                        var usuario = string.IsNullOrWhiteSpace(evento.UsuarioNome) ? "Sistema" : evento.UsuarioNome;
                        <li class="processo-log__item">
                            <div class="processo-log__timestamp">@evento.CriadoEm.ToString("dd/MM/yyyy HH:mm")</div>
                            <div class="processo-log__content">
                                <div class="processo-log__descricao">@evento.Descricao</div>
                                <div class="processo-log__usuario">@usuario</div>
                            </div>
                        </li>
                    }
                </ol>
            }
            else
            {
                <p class="text-muted mb-0">Nenhum evento registrado para este processo.</p>
            }
        </div>
    </section>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const root = document.getElementById('processo-detalhes');
            if (root && window.Alfa && typeof window.Alfa.initProcessoDetalhes === 'function') {
                window.Alfa.initProcessoDetalhes(root);
            }
        });
    </script>
}
