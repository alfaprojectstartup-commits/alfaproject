@model NovoProcessoVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Novo processo";
}

<h4 class="mb-3">Novo processo</h4>
<form method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label class="form-label">Fases a incluir</label>
        @if (Model.FasesDisponiveis is null || !Model.FasesDisponiveis.Any())
        {
            <div class="alert alert-warning mb-0">Nenhum modelo de fase disponível.</div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var fase in Model.FasesDisponiveis)
                {
                    <div class="col-md-6">
                        <div class="form-check border rounded px-3 py-2 h-100">
                            <input class="form-check-input" type="checkbox" name="FasesSelecionadasIds" value="@fase.Id" id="fase_@fase.Id" @(Model.FasesSelecionadasIds.Contains(fase.Id) ? "checked" : "") />
                            <label class="form-check-label" for="fase_@fase.Id">
                                <strong>@fase.Titulo</strong>
                                <small class="d-block text-muted">Ordem: @fase.Ordem</small>
                            </label>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Criar processo</button>
        <a asp-action="Index" class="btn btn-link">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
