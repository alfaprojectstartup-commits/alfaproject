@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Http
@inject IConfiguration Config
@using Microsoft.Extensions.Configuration

@{
    var nome = Http.HttpContext?.Session.GetString("Nome") ?? "Visitante";
    var ctrl = (string?)ViewContext.RouteData.Values["controller"] ?? "";
    var empresaId = Http.HttpContext?.Session.GetInt32("EmpresaId");
    if ((!empresaId.HasValue || empresaId.Value <= 0) && ViewContext.ViewData.TryGetValue("EmpresaIdOverride", out var empresaOverride))
    {
        if (empresaOverride is int overrideInt && overrideInt > 0)
        {
            empresaId = overrideInt;
        }
    }
    var apiBaseSetting = Config["ApiBaseUrl"] ?? string.Empty;
    var apiBase = string.IsNullOrWhiteSpace(apiBaseSetting)
        ? string.Empty
        : string.Concat(apiBaseSetting.TrimEnd('/'), "/api");
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Alfa</title>
    <script>
        (function () {
            var storageKey = 'alfa-theme';
            try {
                var stored = window.localStorage.getItem(storageKey);
                if (stored === 'dark' || stored === 'light') {
                    document.documentElement.setAttribute('data-theme', stored);
                }
            } catch (err) {
                console.warn('NÃ£o foi possÃ­vel ler a preferÃªncia de tema do usuÃ¡rio.', err);
            }
        })();
    </script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body data-empresa-id="@empresaId" data-api-base="@apiBase">
    <header class="navbar navbar-expand-lg al-navbar shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Processos" asp-action="Index">
                <img src="~/img/logo.svg" alt="Alfa" height="28" class="me-2 logo-mark">
                <span class="fw-semibold">Alfa</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto align-items-lg-center">

                    <li class="nav-item dropdown dropdown-hover">
                        <a class="nav-link dropdown-toggle @(ctrl=="Processos"?"active":"")" href="#" role="button" data-bs-toggle="dropdown">
                            Processos
                        </a>
                        <ul class="dropdown-menu dropdown-fade">
                            <li><a class="dropdown-item" asp-controller="Processos" asp-action="Index">Lista</a></li>
                            <li><a class="dropdown-item" asp-controller="Templates" asp-action="Index">Templates</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ctrl=="Dashboard"?"active":"")" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>

                    <li class="nav-item dropdown dropdown-hover">
                        <a class="nav-link dropdown-toggle @(ctrl=="Usuarios"?"active":"")" href="#" data-bs-toggle="dropdown">UsuÃ¡rios</a>
                        <ul class="dropdown-menu dropdown-fade">
                            <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">Lista</a></li>
                            <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Permissoes">PermissÃµes</a></li>
                        </ul>
                    </li>

                    <li class="nav-item me-lg-3">
                        <button type="button" class="btn btn-soft-theme btn-sm" data-theme-toggle aria-pressed="false">
                            <span class="icon" data-theme-icon aria-hidden="true">ðŸŒ™</span>
                            <span class="label" data-theme-label>Tema escuro</span>
                        </button>
                    </li>

                    <li class="nav-item ms-lg-2">
                        <span class="navbar-text small text-muted me-2">Bem-vindo, @nome</span>
                        <a class="btn btn-outline-secondary btn-sm" href="/logout">Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <main class="container py-4">
        @if (TempData["ok"] is string ok)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ok
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>

    <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3"></div>

    <footer class="border-top mt-auto py-3">
        <div class="container d-flex justify-content-between small text-muted">
            <span>&copy; @DateTime.Now.Year â€“ Alfa</span>
            <span>v0.1</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
