@model ErrorViewModel
@{
    ViewData["Title"] = "Ops! Ocorreu um erro";
}

<section class="error-wrapper text-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="error-card shadow-sm p-4 p-md-5 bg-white rounded">
                    <div class="error-icon text-danger mb-3">
                        
                    </div>
                    <h1 class="mb-3">Algo deu errado</h1>
                    <p class="lead text-muted mb-4">
                        Encontramos um problema ao processar sua solicitação. Nossa equipe já foi notificada e estamos trabalhando para resolver.
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mb-4">
                            <strong>Código de referência:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
                        <a asp-controller="Processos" asp-action="Index" class="btn btn-primary px-4">Ir para a página inicial</a>
                        <button type="button" class="btn btn-outline-secondary px-4" onclick="history.back()">Voltar para a página anterior</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        background-color: #f8f9fa;
    }

    .error-icon svg {
        width: 4rem;
        height: 4rem;
    }

    @@media (max-width: 576px) {
        .error-card {
            border-radius: 1rem;
        }
    }
</style>
