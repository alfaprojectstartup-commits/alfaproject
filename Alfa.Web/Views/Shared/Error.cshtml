@model ErrorViewModel
@{
    ViewData["Title"] = "Ops! Ocorreu um erro";
}

<section class="error-wrapper text-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="error-card shadow-sm p-4 p-md-5 bg-white rounded">
                    <div class="error-icon text-danger mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                            <path d="M8 16A8 8 0 1 1 8 0a8 8 0 0 1 0 16m0-1A7 7 0 1 0 8 1a7 7 0 0 0 0 14" />
                            <path d="M4.285 12.433a.5.5 0 0 1 .682-.183A3.498 3.498 0 0 0 8 13.5c1.295 0 2.426-.703 3.033-1.75a.5.5 0 1 1 .865.5A4.498 4.498 0 0 1 8 14.5a4.498 4.498 0 0 1-3.898-2.167.5.5 0 0 1 .183-.682M7.002 3a1 1 0 1 1-2 0 1 1 0 0 1 2 0m4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0M8 5.5a.5.5 0 0 1 .5.5v3.5a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5" />
                        </svg>
                    </div>
                    <h1 class="mb-3">Algo deu errado</h1>
                    <p class="lead text-muted mb-4">
                        Encontramos um problema ao processar sua solicitação. Nossa equipe já foi notificada e estamos trabalhando para resolver.
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mb-4">
                            <strong>Código de referência:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
                        <a asp-controller="Processos" asp-action="Index" class="btn btn-primary px-4">Ir para a página inicial</a>
                        <button type="button" class="btn btn-outline-secondary px-4" onclick="history.back()">Voltar para a página anterior</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        background-color: #f8f9fa;
    }

    .error-icon svg {
        width: 4rem;
        height: 4rem;
    }

    @media (max-width: 576px) {
        .error-card {
            border-radius: 1rem;
        }
    }
</style>
